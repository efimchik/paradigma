.btn
    padding 0 45px
    width 100%
    max-width 280px
    height 60px
    display inline-flex
    justify-content center
    align-items center
    font-family 'Montserrat', sans-serif
    line-height 16px
    font-size 10px
    font-weight 600
    text-align center
    color $bg-secondary-color
    text-transform uppercase
    letter-spacing 0.02em
    text-decoration none
    border-radius 30px
    border 0
    background-color $bg-btn-primary-color
    transition all 300ms ease
    box-sizing border-box
    cursor pointer

    @media(min-width 992px)
        padding 0 3.750vw
        max-width 26.667vw
        height 5vw

    @media(min-width 1200px)
        padding 0 2vw
        max-width 20vw
        height 3.75vw

    &__icn
        margin-left 6px
        width 20px
        height 20px
        display block
        flex-shrink 0

        @media(min-width 992px)
            margin-left 0.5vw

    &__icn
    &__text
        transition all 300ms ease

    &:hover
        background-color $bg-btn-primary-hover

        .btn
            &__icn
                transform translateX(-2px)

            &__text
                transform translateX(2px)

    &--orange
         background-color $bg-btn-seconadry-color

         &:hover
            background-color $bg-btn-seconadry-hover
