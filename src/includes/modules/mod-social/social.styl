.social
    display flex
    flex-direction column
    justify-content center
    align-items center
    line-height 10px
    font-size 8px
    letter-spacing 0.02em

    @media(min-width 992px)
        margin-right 20%
        display inline-flex

    strong
        margin-left 4px
        font-weight 700

    &__title
        margin-bottom 10px
        padding-left 8px
        position relative

        @media(min-width 992px)
            line-height 0.781vw
            font-size 0.625vw

        &:before
            content ''
            width 4px
            height 4px
            position absolute
            top 50%
            left 0
            background-color $bg-social-title-color
            border-radius 50%
            transform translateY(-50%)

    &__list
        display flex

        &-item
            margin-left 14px
            width 44px

            &:first-child
                margin-left 0

            a
                display block
                text-decoration none
                transition transform 300ms ease

                &:hover
                    transform rotate(25deg)