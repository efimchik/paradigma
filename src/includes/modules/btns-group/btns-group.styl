.btns
    &__group
        max-width 280px
        width 100%
        display inline-flex
        flex-direction column

        @media(min-width 900px)
            max-width 580px
            flex-direction row
            align-items flex-end
            justify-content space-between

        @media(min-width 992px)
            max-width 56.667vw
            align-items flex-start

        @media(min-width 1200px)
            max-width 42vw

        @media(min-width 1600px)
            max-width 34vw

        .btn
            margin-top 12px

            @media(min-width 900px)
                margin-top 0
                width 48%

            &--orange
                padding 0 50px

                @media(min-width 992px)
                    padding 0 5vw

                @media(min-width 1200px)
                    padding 0 3vw

    &__box
        display flex
        flex-direction column

        @media(min-width 900px)
            width 48%

        .btn
            @media(min-width 680px)
                margin 0 0 12px 0

            @media(min-width 900px)
                margin 12px 0 0
                width 100%

            @media(min-width 992px)
                margin 0 0 1vw
                width 100%

        &-label
            padding 32px 40px 0
            line-height 12px
            font-size 8px
            text-align center
            position relative

            @media(min-width 680px)
                padding 0 32px
                order 1
                line-height 18px
                font-size 12px

            @media(min-width 900px)
                padding 32px 32px 0
                order 0

            @media(min-width 992px)
                padding 0 32px
                order 1
                line-height 1.833vw
                font-size 1.167vw

            @media(min-width 1200px)
                line-height 1.375vw
                font-size 0.875vw

            @media(min-width 1600px)
                line-height 1.146vw
                font-size 0.729vw

            strong
                font-weight 600

        &-icn
            width 22px
            height 22px
            position absolute
            top 0
            left 50%
            transform translateX(-50%)

            @media(min-width 680px)
                top 0
                left 0
                transform translateX(0)

            @media(min-width 900px)
                left 50%
                transform translateX(-50%)

            @media(min-width 992px)
                left 0
                transform translateX(0)

            &:before
            &:after
                content ''
                position absolute
                background-color rgba($bg-btn-seconadry-color, 0.8)
                border-radius 50%

            &:before
                width 10px
                height 10px
                top 0
                left 0
                animation scale-small 1.1s linear 1s infinite

            &:after
                width 6px
                height 6px
                top 2px
                left 2px

            img
                position relative
                z-index 1
                transform translate(4px, 2px)






@-webkit-keyframes scale-small
    0%
        -webkit-transform: scale(0.8);
        transform: scale(0.8);
        opacity: 0;
    50%
        -webkit-transform: scale(1);
        transform: scale(1);
        opacity: 0.3;
    100%
        -webkit-transform: scale(1.2);
        transform: cale(1.2);
        opacity: 0;

@keyframes scale-small
    0%
        -webkit-transform: scale(0.8);
        transform: scale(0.8);
        opacity: 0;
    50%
        -webkit-transform: scale(1);
        transform: scale(1);
        opacity: 0.3;
    100%
        -webkit-transform: scale(1.2);
        transform: scale(1.2);
        opacity: 0;
