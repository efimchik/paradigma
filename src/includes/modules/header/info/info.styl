.info
    margin 0 auto 16px
    max-width 212px
    width 100%
    display flex
    flex-direction column
    align-items center

    @media(min-width 992px)
        margin 0
        padding 1.458vw 0
        max-width inherit
        width 35%
        display inline-flex
        flex-direction row
        justify-content space-between

    &__text
        margin-bottom 16px
        width 175px
        line-height 14px
        font-size 8px
        text-align center

        @media(min-width 992px)
            margin 0
            width 11.9vw
            line-height 0.938vw
            font-size 0.625vw

        span
            @media(min-width 992px)
                margin 5px 0 0
                display block

        strong
            font-weight 600

    &__download
        line-height 12px
        font-size 10px
        font-weight 600
        letter-spacing 0.04em

        @media(min-width 992px)
            line-height 0.781vw
            font-size 0.625vw

        a
            height 44px
            display flex
            align-items center
            padding-left 62px
            color $text-primary-color
            text-decoration none
            position relative
            transition color 300ms

            &:hover
                color $text-primary-hover

        span
            width 44px
            height 44px
            line-height 44px
            font-size 11px
            color $text-secondary-color
            font-weight 600
            text-align center
            letter-spacing 0.04em
            position absolute
            top 50%
            left 0
            border-radius 50%
            transform translateY(-50%)
            background-color $bg-secondary-color
            box-shadow 0px 0px 25px rgba(#000, 0.05)
